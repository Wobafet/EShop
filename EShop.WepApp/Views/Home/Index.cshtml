                        </div>
                        <h1>@(i-9).</h1>
                        <h2>@Model[i].Title</h2>
                        @for (int j = 0; j < Model[i].Autors.Count; j++)
                        {
                            <p>@Model[i].Autors[j].FirstName @Model[i].Autors[j].LastName</p>
