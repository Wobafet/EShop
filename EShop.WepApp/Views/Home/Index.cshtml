            <div class="row slider">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="carousel-item col-md-4">
                        <div class="details">
                            <img src="@Model[i].Image" alt="">
                        </div>
                        <h2>@Model[i].Title</h2>
                        @for (int j = 0; j < Model[i].Autors.Count; j++)
                        {
                            <p>@Model[i].Autors[j].FirstName @Model[i].Autors[j].LastName</p>
                        }
