
@model SignUpViewModel

<form style="width: 70%; margin: auto; margin-top: 1%" class="needs-validation" asp-action="Create" asp-controller="Customer" id="signUp">



   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">

        <div class="form-group col-md-6 col-xs-12">
            <label for="customerType"> Customer type</label>

            <select onchange="ChangeComboBox()"
                    name="customerType"
                    id="customerType"
                    class="form-control">
                <option value="Natural person">Natural person</option>
                <option value="Legal entity">Legal entity</option>
            </select>
        </div>



        <div class="row">


        </div>

    </div>



    <div class="form-row" id="naturalPerson">
        <div class="form-group col-md-6 col-xs-12">
            <label for="FirstName">First name</label>
            <input type="text" class="form-control" name="FirstName" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
        <div class="form-group col-md-6 col-xs-12">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control " name="LastName" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
    </div>


    <div class="form-row" id="legalEntity" style="display: none;">
        <div class="form-group col-md-6 col-xs-12">
            <label for="CompanyName">Company name</label>
            <input type="text" class="form-control" name="CompanyName" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
        <div class="form-group col-md-6">
            <label for="TIN">TIN</label>
            <input type="text" class="form-control" name="TIN" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
    </div>




    <div class="form-row">
        <div class="form-group col-md-6 col-xs-12">
            <label for="Email">Email</label>
            <input type="email" class="form-control" name="email" asp-for="Email" />
            <small class="invalid-feedback" id="empty"> This field must not be empty</small>
            <small class="invalid-feedback" id="email"> Enter valid email</small>
        </div>
        <div class="form-group col-md-6 col-xs-12">
            <label for="PhoneNumber">Phone number</label>
            <input type="number" class="form-control" name="PhoneNumber" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6 col-xs-12">
            <label for="City">City</label>
            <input type="text" class="form-control" asp-for="Address.CityName" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
        <div class="form-group col-md-6 col-xs-12">
            <label for="PTT">PTT</label>
            <input type="number" class="form-control" asp-for="Address.PTT" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6 col-xs-12">
            <label for="StreetName">Street name</label>
            <input type="text" class="form-control" asp-for="Address.StreetName" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
        <div class="form-group col-md-6 col-xs-12">
            <label for="StreetNumber">Street number</label>
            <input type="text" class="form-control" asp-for="Address.StreetNumber" />
            <small class="invalid-feedback"> This field must not be empty</small>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6 col-xs-12">
            <label for="Password">Password</label>
            <input type="password" class="form-control" name="Password" />
            <small class="invalid-feedback" id="emptyPassword"> This field must not be empty</small>
            <small class="invalid-feedback" id="password"> Password must contain at least number, upper and lower letter, one special character and at least 6 length</small>
        </div>
        <div class="form-group col-md-6 col-xs-12">
            <label for="ConfirmPassword">Confirm password</label>
            <input type="password" class="form-control" name="ConfirmPassword" />
            <small class="invalid-feedback" id="emptyConfirmPassword"> This field must not be empty</small>
            <small class="invalid-feedback" id="confirmPassword"> Passwords don't match</small>
        </div>
    </div>


    <div class="form-row">



        <div class="form-group col-md-12" style="margin-top: 5%;">

            <button type="submit" class="btn btn-primary form-control">Sign up</button>
        </div>


    </div>
</form>

