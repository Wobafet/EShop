@model ForgotPasswordViewModel

<div class="col-md-6 login-form-1">
    <h3>Reset Password</h3>
    <form method="post" asp-controller="Customer" asp-action="ResetPassword">

        <div class="form-group">
            <input type="password" class="form-control" placeholder="Your Password " asp-for="Password" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Repeat Password " asp-for="ResetPassword" />
        </div>
        <div class="form-group">
            <input type="text" value="@Model.Email" asp-for="Email" style="display:none" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit"/>
        </div>

    </form>
</div>